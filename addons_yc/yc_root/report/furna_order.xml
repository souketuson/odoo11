                                    <td class="b1">
                                        <span t-esc="o['heat1']"/>
                                    </td>
                                    <td class="b1">
                                        <span t-esc="o['heat2']"/>
                                    </td>
                                    <td class="b1">
                                        <span t-esc="o['heat3']"/>
                                    </td>
