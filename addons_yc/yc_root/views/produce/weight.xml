            <field name="name">weight.tree</field>
            <field name="model">yc.weight</field>
            <field name="arch" type="xml">
                <tree string="Weight Tree">
                    <field name="name"/>
                    <field name="day"/>
                    <field name="weightime"/>
                    <field name="driver_id"/>
                    <field name="person_id"/>
                    <field name="carno"/>
                    <field name="in_out"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
