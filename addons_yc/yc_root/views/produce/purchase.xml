<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--css-->
        <template id="assets_backend" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link href="/yc_root/static/src/css/cssfile.css" rel="stylesheet"/>
                <script type="text/javascript" src="/yc_root/static/src/js/javcriptfile.js"></script>
            </xpath>
        </template>

        <!-- view of purchase tree -->
        <record model="ir.ui.view" id="purchase_tree">
            <field name="name">purchase.tree</field>
            <field name="model">yc.purchase</field>
            <field name="arch" type="xml">
                <tree string="Purchase tree">
                    <field name="name"/>
                    <field name="day"/>
                    <field name="time"/>
                    <field name="car_no"/>
                    <field name="status"/>
                    <field name="weighstate"/>
                    <field name="checkstate"/>
                </tree>
            </field>
        </record>

        <!-- view of purchase form-->
        <record model="ir.ui.view" id="purchase_form">
            <field name="name">purchase.form</field>
            <field name="model">yc.purchase</field>
            <field name="arch" type="xml">
                <form string="Purchase form">
                    <sheet>
                        <group string="進貨資訊" col="10">
                            <field name="day"/>
                            <field name="copy_createdate" attrs="{'readonly': True }"/>
                            <field name="time" nolabel="1"/>
                            <field name="factory_id"/>
                            <field name="pre_order" colspan="3"/>
                            <!--<newline/>-->
                            <!-- -->
                            <field name="car_no" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="processing_attache"/>
                            <separator/>
                            <field name="customer_id"/>
                            <newline/>
                            <!-- -->
                            <field name="driver_id" attrs="{'readonly': True }"/>
                            <field name="combo_process" readonly="1"/>
                            <separator/>
                            <field name="combo_customer" readonly="1"/>
                            <!--<field name="processing_phone" readonly="1"/>-->
                            <!--<field name="processing_contact" readonly="1" colspan="4" />-->
                            <newline/>
                            <!-- -->
                            <field name="name" readonly="1"/>
                            <field name="batch"/>
                            <separator/>
                            <field name="customer_no"/>
                            <field name="person"/>


                            <!-- last version backup -->
                            <!--<field name="day" colspan="4"/>-->
                            <!--<field name="copy_createdate" attrs="{'readonly': True }" colspan="4"/>-->
                            <!--<newline/>-->
                            <!--<field name="car_no" attrs="{'readonly': [('id', '!=', False)]}"/>-->
                            <!--<field name="processing_attache"/>-->
                            <!--<field name="customer_id" colspan="4"/>-->
                            <!--<newline/>-->
                            <!--<field name="driver_id" attrs="{'readonly': True }"/>-->
                            <!--<field name="combo_process" readonly="1"/>-->
                            <!--<field name="combo_customer" readonly="1"/>-->
                            <!--&lt;!&ndash;<field name="processing_phone" readonly="1"/>&ndash;&gt;-->
                            <!--&lt;!&ndash;<field name="processing_contact" readonly="1" colspan="4" />&ndash;&gt;-->
                            <!--<newline/>-->
                            <!--<field name="name" readonly="1"/>-->
                            <!--<field name="batch"/>-->
                            <!--<field name="time" colspan="4"/>-->
                            <!--<newline/>-->
                            <!--<field name="pre_order"/>-->
                            <!--<field name="person"/>-->
                            <!--<field name="factory_id" colspan="4"/>-->

                        </group>
                        <notebook>
                            <page string="基本資料">
                                <group string="規格明細" col="8">
                                    <div>
                                        <label string="品名分類" style="font-weight:bold"/>
                                        <field name="clsf_code" style="width:15%%"/>　　　|　
                                        <label string="品名" style="font-weight:bold"/>
                                        <field name="product_code" style="width:15%%"/>　　　|　
                                        <label string="強度級數" style="font-weight:bold"/>
                                        <field name="strength_level" style="width:15%%"/>　　　　|　
                                        <label string="材質" style="font-weight:bold"/>
                                        <field name="txtur_code" style="width:15%%"/>
                                        <br/>
                                        <label string="規格　　" style="font-weight:bold"/>
                                        <field name="norm_code" style="width:15%%"/>　　　|　
                                        <label string="長度" style="font-weight:bold"/>
                                        <field name="len_code" style="width:15%%"/>
                                        <span style="display:inline-block; width: 10px;"></span>
                                        <field name="len_descript" nolabel="1" placeholder="長度說明" style="width:17%%"/>
                                        　　　　　　　　　　|　
                                        <label string="全牙或半牙" style="font-weight:bold"/>
                                        <field name="fullorhalf" style="width:15%%"/>
                                        <br/>

                                        <label string="加工方式" style="font-weight:bold"/>
                                        <field name="proces_code" style="width:15%%"/>　　　|　
                                        <label string="表面處理" style="font-weight:bold"/>
                                        <field name="surface_code" style="width:13%%"/>　　　|　
                                        <label string="電鍍別" style="font-weight:bold"/>
                                        <field name="elecpl_code" attrs="{'readonly': [('elecplswitch', '=', 'OFF')]}"
                                               style="width:15%%"/>　
                                        <!--<field name="portage"/>-->
                                        <field name="elecplswitch" invisible="1"/>
                                    </div>
                                </group>
                                <group col="20">
                                    <div>
                                        <label string="數量　" style="font-weight:bold" class="oe_inline"/>
                                        <field name="num1" style="width:100px"/>　
                                        <field name="unit1" nolabel="1" style="width:4%%"/>
                                        <span style="display:inline-block; width: 10px;"></span>
                                        <label string="" class="oe_inline"/>
                                        <field name="num2" style="width:100px"/>
                                        <field name="unit2" nolabel="1" style="width:4%%"/>
                                        <span style="display:inline-block; width: 10px;"></span>
                                        <label string="" class="oe_inline"/>
                                        <field name="num3" style="width:100px"/>
                                        <field name="unit3" nolabel="1" style="width:4%%"/>
                                        <span style="display:inline-block; width: 10px;"></span>
                                        <label string="" class="oe_inline"/>
                                        <field name="num4" style="width:100px"/>
                                        <field name="unit4" nolabel="1" style="width:4%%"/>　　
                                        　　　　
                                        　　　　　　　　　　|

                                        <label string="  存放地點" style="font-weight:bold"/>
                                        <field name="storeplace" style="width:100px"/>
                                    </div>
                                </group>
                                <group col="8">
                                    <div>
                                        <label string="淨重" style="font-weight:bold"/>
                                        <field name="net" style="width:15%%"/>　　|　
                                        <label string="次加工廠" style="font-weight:bold"/>
                                        <field name="process1" style="width:15%%"/>　　|　
                                        <label string="裝袋合計" style="font-weight:bold"/>
                                        <field name="totalpack" style="width:15%%"/>　　|　
                                        <label string="二次加工" style="font-weight:bold"/>
                                        <field name="process2" style="width:15%%"/>
                                        <br/>
                                        <label string="依據標準" style="font-weight:bold"/>
                                        <field name="standard" style="width:15%%"/>　　|　
                                        <label string="線材爐號" style="font-weight:bold"/>
                                        <field name="wire_furn" style="width:15%%"/>　　|　
                                        <label string="頭部記號" style="font-weight:bold"/>
                                        <field name="headsign" widget='image' height="90" width="90" style="width:15%%;position:relative;top:60px"/>
                                    </div>
                                </group>
                                <group string="其他" col="8">
                                    <field name="surfhrd"/>
                                    <field name="corehrd"/>
                                    <field name="piece" widget="radio"/>
                                    <field name="norcls"/>
                                    <field name="tensihrd"/>
                                    <field name="carburlayer"/>
                                    <field name="pre_furn"/>
                                    <field name="wxr_txtur"/>
                                    <field name="torsion"/>
                                    <field name="retempt"/>
                                    <field name="order_furn"/>
                                    <field name="wxrhard"/>
                                </group>
                                <group col="8">
                                    <div>
                                        <label string="注意事項"/>
                                        <field name="notices1" style="width:31%%"/>
                                        <field name="notices2" style="width:31%%"/>
                                        <field name="notices3" style="width:31%%"/>
                                        <!--<field name="notices4"/>-->
                                    </div>
                                </group>
                                <group>
                                    <div>
                                        <label string="品管備註"/>
                                        <field name="qcnote1" style="width:31%%"/>
                                        <field name="qcnote2" style="width:31%%"/>
                                        <field name="qcnote3" style="width:31%%"/>
                                    </div>
                                </group>
                                <group>
                                    <div>
                                        <label string="製造備註"/>
                                        <field name="prodnote1" style="width:31%%"/>
                                        <field name="prodnote2" style="width:31%%"/>
                                        <field name="prodnote3" style="width:31%%"/>
                                    </div>
                                </group>
                            </page>

                            <page string="作業條件">
                                <group col="12">
                                    <field name="flow"/>
                                    <field name="cp"/>
                                    <field name="nh31"/>
                                    <field name="nh32" string="支"/>
                                    <field name="nh33" string="地"/>
                                    <field name="nh34" string="支"/>
                                </group>
                                <group col="10">
                                    <field name="heat1"/>
                                    <field name="heat2" nolabel="1"/>
                                    <field name="heat3" nolabel="1"/>
                                    <field name="heat4" nolabel="1"/>
                                    <field name="heat5" nolabel="1"/>
                                    <field name="heat6" nolabel="1"/>
                                    <field name="heat7" nolabel="1"/>
                                    <field name="heat8" nolabel="1"/>
                                    <separator/>
                                </group>
                                <group col="12">
                                    <field name="heattemp"/>
                                    <field name="heatsped"/>
                                    <field name="tempturing1"/>
                                    <field name="tempturing2"/>
                                    <field name="tempturing3"/>
                                    <field name="tempturing4"/>
                                    <field name="tempturing5"/>
                                    <field name="tempturing6"/>
                                    <field name="tempturisped"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- auto generate number-->
        <record id="auto_number_purchase" model="ir.sequence">
            <field name="name">Purchase List Code</field>
            <field name="code">Purchase.sequence</field>
            <field name="implementation">no_gap</field>
            <field name="prefix">PL%(y)s%(month)s%(day)s</field>
            <field name="padding">3</field>
        </record>

        <!-- action -->
        <record model="ir.actions.act_window" id="purchase_list_action">
            <field name="name">進貨單作業</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">yc.purchase</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window.view" id="purchase_list_action_form">
            <field name="act_window_id" ref="purchase_list_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="purchase_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="purchase_list_action_tree">
            <field name="act_window_id" ref="purchase_list_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="purchase_tree"/>
        </record>
    </data>
</odoo>
