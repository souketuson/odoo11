                                        <field name="safeload7"/>
                                        <field name="safeload8"/>
                                    </div>
                                </group>
                            </page>
                            <page string="判定登錄">
                                <group>
                                    <field name="ckecl" widget="checkbox" nolabel="1"/>
                                    <field name="HV1"/>
                                    <field name="HV2"/>
                                    <field name="HV3"/>
