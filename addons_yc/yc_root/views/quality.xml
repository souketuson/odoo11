                                <!--<div>-->
                                <label string="" class="oe_inline"/>
                                <field name="num4" style="width:100px"/>
                                <field name="unit4" nolabel="1" class="oe_inline" style="width:50px"/>
                            </div>
                        </group>
                        <notebook>
                            <page string="數據登錄">
                                <group>
                                    <div>
                                        <label string="依據國際標準" style="font-weight:bold"/>
