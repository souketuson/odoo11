                                        <field name="ckwhrd" widget="checkbox" nolabel="1"/>
                                        <field name="wxrhard"/>
                                        <field name="ckhf"/>
                                        <!-- -->
                                        <field name="cktorsion" widget="checkbox" nolabel="1"/>
                                        <field name="torshv"/>
                                        <field name="torshv1"/>
                                        <field name="torshv2"/>
                                        <field name="torshv3"/>
                                        <field name="torshv4"/>
                                        <field name="torshv5"/>
                                        <field name="torshv6"/>
                                        <field name="torshv7"/>
                                        <field name="torshv8"/>
                                        <!-- -->
                                        <field name="ckclv" widget="checkbox" nolabel="1"/>
                                        <field name="carb1v"/>
                                        <field name="ckcl1v" widget="checkbox" nolabel="1"/>
                                        <field name="carb1v1"/>
