                                    <field name="curv15" widget="checkbox"/>
                                    <field name="curv30" widget="checkbox"/>
                                    <field name="qcnote"/>
                                </group>
                            </page>
                            <page string="製造條件" col="10">
                                <group>
                                    <group>
                                        <field name="produceday1"/>
