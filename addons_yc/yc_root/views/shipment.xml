<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record model="ir.ui.view" id="shipment_tree">
            <field name="name">shipment.tree</field>
            <field name="model">yc.shipment</field>
            <field name="arch" type="xml">
                <tree string="shipment Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record model="ir.ui.view" id="shipment_form">
            <field name="name">shipment.form</field>
            <field name="model">yc.shipment</field>
            <field name="arch" type="xml">
                <form string="Book">
                    <group col="6">
                        <field name="name"/>
                        <field name="day"/>
                        <field name="customer_id"/>
                        <field name="pc"/>
                        <field name="driver_id"/>
                        <field name="factory_id"/>

                        <!--<button type="object" name="search_order" string="追加"/>-->
                        <field name="searchorder"/>
                        <!-- 除了工令searchorder 其他欄位看不出顯示的意義 -->
                        <!--<field name="searchfurn"/>-->
                        <!--<field name="searchbuk"/>-->
                        <!--<field name="searchunit"/>-->
                        <!--<field name=""/>-->
                        <!--<field name=""/>-->
                        <!--<field name=""/>-->
                        <!--<field name=""/>-->
                        <button type="object" name="" string="轉待出貨或刪除"/>
                    </group>
                    <group>
                        <field name="ship_details_ids" widget="many2many">
                            <tree string="Shipment Details" editable="top">
                                <field name="ship_check" widget="chechbox"/>
                                <field name="order"/>
                                <field name="furnace"/>
                                <field name="product_code"/>
                                <field name="norm_code"/>
                                <field name="txtur_code"/>
                                <field name="buckets"/>
                                <field name="unit"/>
                                <field name="tweight"/>
                                <field name="elecpl_code"/>
                                <field name="process1"/>
                                <field name="batch"/>
                                <field name="fullorhalf"/>
                                <field name="process2"/>
                                <field name="day"/>
                                <field name="wire_furn"/>
                                <field name="proces_code"/>
                            </tree>
                        </field>
                    </group>
                </form>
            </field>
        </record>
        <!-- search -->
        <record model="ir.ui.view" id="shipment_search_view">
            <field name="name">shipment.search</field>
            <field name="model">yc.shipment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <!-- action -->

        <!--<record id="action_ship_search" model="ir.actions.act_window">-->
            <!--<field name="name">開發中頁面</field>-->
            <!--<field name="res_model">yc.shipment</field>-->
            <!--<field name="view_type">form</field>-->
            <!--<field name="view_mode">form</field>-->
            <!--<field name="target">inline</field>-->
        <!--</record>-->
        <!--<record model="ir.actions.act_window.view" id="shipment_search_action_form">-->
            <!--<field name="act_window_id" ref="action_ship_search"/>-->
            <!--<field name="sequence" eval="20"/>-->
            <!--<field name="view_mode">form</field>-->
            <!--<field name="view_id" ref="shipment_form"/>-->
        <!--</record>-->

        <record model="ir.actions.act_window" id="shipment_action">
            <field name="name">開發中頁面</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">yc.shipment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="shipment">開發中
                </p>
            </field>
        </record>
        <record model="ir.actions.act_window.view" id="shipment_action_form">
            <field name="act_window_id" ref="shipment_action"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="shipment_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="shipment_action_tree">
            <field name="act_window_id" ref="shipment_action"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="shipment_tree"/>
        </record>
    </data>
</odoo>