<odoo>
    <data>
        <record model="ir.ui.view" id="yc_data_import_view">
            <field name="name">舊系統資料匯入</field>
            <field name="model">yc.data.import</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <head>
                            <title>匯入舊資料</title>
                        </head>
                        <group string="基本資料">

                            <div>
                                <label string="匯入筆數" style="font-weight:bold;"/>
                                <field name="how_many_do_you_want" style="width:100px" placeholder="請輸入筆數"/>
                                <br/>
                                <button string="員工主檔" type="object" name="employee"
                                        confirm="確定匯入?" class="oe_highlight"/>
                                |
                                <button string="過磅單主檔" type="object" name="weight_main"
                                        confirm="確定匯入?" class="oe_highlight"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="yc_data_import_action">
            <field name="name">匯入舊資料</field>
            <field name="res_model">yc.data.import</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="topc_import_menu" name="試試看"
                  parent="base.menu_administration" sequence="1" groups="base.group_system"/>
        <menuitem id="topc_import_db"
                  parent="topc_import_menu" sequence="1" groups="base.group_system"
                  action="yc_data_import_action"/>

        <menuitem name="資料導入" id="Import_root" web_icon=""/>
        <menuitem id="import_db"
                  parent="Import_root" sequence="1" action="yc_data_import_action"/>
    </data>
</odoo>